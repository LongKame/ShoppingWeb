        #lblCartCount {
            font-size: 12px;
            background: #ff0000;
            color: #fff;
            padding: 0 5px;
            vertical-align: top;
            margin-left: -10px;
        }

        .wrapper {
            display: grid;
            grid-template-columns: 200px 200px 200px;
            grid-column-gap: 50px;
            grid-row-gap: 10px;
        }

        .list-group {
            margin: auto;
            float: left;
            padding-top: 20px;
        }

        .lead {
            margin: auto;
            left: 0;
            right: 0;
            padding-top: 10%;
        }

        .item {
            position: relative;
            overflow: hidden;
            margin: 10px;
            width: 100%;
            /* height: 100%; */
            background: #000000;
            text-align: center;
            border-radius: 20px;
            width: 240px
        }

            .item .text {
                position: absolute;
                left: 50%;
                transform: translate(-50%, -50%);
            }

            .item .text {
                position: relative;
                overflow: hidden;
                min-width: 220px;
                max-width: 500px;
                width: 100%;
                font-size: 30px;
            }

            .item img {
                max-width: 100%;
                opacity: 1;
                -webkit-transition: opacity 0.35s;
                transition: opacity 0.35s;
            }

            .item > div {
                left: 0;
                right: 0;
                top: 0;
                bottom: 0;
                height: 100%;
                position: absolute;
            }

                .item > div a {
                    color: #ffffff;
                }

                    .item > div a i {
                        font-size: 50px;
                        opacity: 0;
                        top: 50%;
                        position: relative;
                        -webkit-transform: translate3d(0, -50%, 0);
                        transform: translate3d(0, -50%, 0);
                        -webkit-transition-delay: 0s;
                        transition-delay: 0s;
                        display: inline-block;
                    }

                        .item > div a i.left-icon {
                            -webkit-transform: translate3d(0, -50%, 0);
                            transform: translate3d(0, -50%, 0);
                        }

                        .item > div a i.right-icon {
                            -webkit-transform: translate3d(0, -50%, 0);
                            transform: translate3d(0, -50%, 0);
                        }

            .item:hover img {
                opacity: 0.35;
            }

            .item:hover > div i {
                opacity: 0.9;
                -webkit-transition: 0.3s ease-in-out;
                transition: 0.3s ease-in-out;
                -webkit-transition-delay: 0.3s;
                transition-delay: 0.3s;
            }

                .item:hover > div i.left-icon {
                    -webkit-transform: translate3d(-25%, -50%, 0);
                    transform: translate3d(-25%, -50%, 0);
                }

                .item:hover > div i.right-icon {
                    -webkit-transform: translate3d(25%, -50%, 0);
                    transform: translate3d(25%, -50%, 0);
                }

            .item:hover > div::before {
                background: rgba(255, 255, 255, 0);
                left: 30px;
                right: 30px;
                opacity: 1;
                -webkit-transition-delay: 0s;
                transition-delay: 0s;
            }

        html {
            max-height: 100%;
        }

        a .fa {
            display: inline-block;
            margin-right: 15px;
            margin-left: 15px;
            text-align: center;
        }

        .item img {
            width: 800px;
            height: 300px;
            border-radius: 20px;
        }

        .nav-sidebar {
            width: 100%;
            padding: 8px 0;
            border-right: 1px solid #ddd;
        }

            .nav-sidebar a {
                color: #333;
                -webkit-transition: all 0.08s linear;
                -moz-transition: all 0.08s linear;
                -o-transition: all 0.08s linear;
                transition: all 0.08s linear;
                -webkit-border-radius: 4px 0 0 4px;
                -moz-border-radius: 4px 0 0 4px;
                border-radius: 4px 0 0 4px;
            }

            .nav-sidebar .active a {
                cursor: default;
                background-color: #428bca;
                color: #fff;
                text-shadow: 1px 1px 1px #666;
            }

                .nav-sidebar .active a:hover {
                    background-color: #428bca;
                }

            .nav-sidebar .text-overflow a,
            .nav-sidebar .text-overflow .media-body {
                white-space: nowrap;
                overflow: hidden;
                -o-text-overflow: ellipsis;
                text-overflow: ellipsis;
            }

            /* Right-aligned sidebar */
            .nav-sidebar.pull-right {
                border-right: 0;
                border-left: 1px solid #ddd;
            }

                .nav-sidebar.pull-right a {
                    -webkit-border-radius: 0 4px 4px 0;
                    -moz-border-radius: 0 4px 4px 0;
                    border-radius: 0 4px 4px 0;
                }
    </style>
</head>
